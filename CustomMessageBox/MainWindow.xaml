<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMessageBox"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Custom Message Box" Height="700" MinHeight="700" Width="1350" MinWidth="1350" WindowStyle="None"
        WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">

    <Border x:Name="MainBorder">
        <StackPanel x:Name="MainStackPanel">
            <ui:Button x:Name="msgButton" Content="msgButton" Appearance="Primary" Click="ShowMessageBox">
                
            </ui:Button>
        </StackPanel>
    </Border>
</Window>
